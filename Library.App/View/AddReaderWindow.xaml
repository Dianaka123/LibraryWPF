<Window x:Class="Library.App.View.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.App.View"
        xmlns:vm="clr-namespace:Library.App.ViewModels"
        mc:Ignorable="d"
        Title="AddReaderWindow" 
        SizeToContent="Height">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Name"
               Grid.Column="0" Grid.Row="0"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center"/>
        <TextBox 
            Grid.Column="1" Grid.Row="0"
            Margin="10"
            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <Label Content="Last name"
            Grid.Column="0" Grid.Row="1"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBox 
            Grid.Column="1" Grid.Row="1"
            Margin="10"
            Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <Label Content="Patronymic"
            Grid.Column="0" Grid.Row="2"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBox 
            Grid.Column="1" Grid.Row="2"
            Margin="10"
            Text="{Binding Patronymic, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Address"
            Grid.Column="0" Grid.Row="3"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBox 
            Grid.Column="1" Grid.Row="3"
            Margin="10"
            Text="{Binding Address, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <Label Content="Birthday"
            Grid.Column="0" Grid.Row="4"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"/>
        <DatePicker 
            Grid.Column="1" Grid.Row="4"
            Margin="10"
            Text="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="5" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="30 0 5 0">
            <Button Content="Save" Width="80" Margin="5" Command="{Binding CreateReaderCommand}"/>
            <Button Content="Cancel" Width="80" Margin="5" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Window>
